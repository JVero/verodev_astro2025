<style>
	main {
		min-height: 100vh;
	}

	/* Hide default details marker */
	details.resume-details summary::-webkit-details-marker {
		display: none;
	}

	details.resume-details summary::marker {
		display: none;
	}

	/* Add custom expand/collapse icon */
	details.resume-details summary {
		position: relative;
		padding-right: 2rem;
	}

	details.resume-details summary::after {
		content: 'â–¼';
		position: absolute;
		right: 0;
		top: 0;
		font-size: 0.75rem;
		color: #6b7280;
		transition: transform 0.2s ease;
	}

	details.resume-details[open] summary::after {
		transform: rotate(180deg);
	}

	/* Animation for expanding content */
	details.resume-details div[class*="mt-4"] {
		animation: slideDown 0.3s ease-out;
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			max-height: 0;
		}
		to {
			opacity: 1;
			max-height: 1000px;
		}
	}

	/* Better styling when hovered/expanded */
	details.resume-details[open] {
		background-color: #f9fafb;
		border-color: #3b82f6;
	}
</style>

<script>
	// Add smooth collapse/expand behavior
	document.addEventListener('DOMContentLoaded', () => {
		const details = document.querySelectorAll('details.resume-details');
		
		details.forEach(detail => {
